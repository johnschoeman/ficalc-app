<% provide(:title, "TimeToFi") %>

<body>
  <div class="header_buffer"></div>
  <div class="form_header">
    <h1>Time To FI</h1>
    <p>A simple calculator to help you find your time to financial independence.</p>
  </div>

  <form class="timetofi_form" action="" method="post" id="timetofi_form" name="timetofi_form" onsubmit="return false;">
    <fieldset>
          <h2>Find Your Time To FI!</h2>
      <ul>
        <li class="has_bottom_border">
          <h3>Assumptions</h3>
        </li>
        <li>
          <label>Average Return</label>
          <input type="number" id="average-return" name="average-return" step="0.1"
                  onchange="updateDisplay()" value="7.0" required/>
          <span class="form_hint">This is yearly return</span>
        </li>
        <li>
          <label>Inflation</label>
          <input type="number" id="inflation" name="inflation" step="0.1" value="2.0"
                  onchange="updateDisplay()" required/>
        </li>
        <li>
          <label >Raises</label>
          <input type="number" id="raises" name="raises" step="0.1"
                  onchange="updateDisplay()" value="5.0">
        <li>
          <label>Safe Withdrawl Rate</label>
          <input type="number" id="safe-withdrawl-rate"
                    name="safe-withdrawl-rate" step="0.1" min="0" value="4.0"
                    onchange="updateDisplay()" required/>
        </li>
      </ul>
      <ul>
        <li class="has_bottom_border">
          <h3>Input</h3>
        </li>
        <li>
          <label>Monthly Expenses</label>
          <input type="number"  id="month-expenses" name="month-expenses" value="2000"
                  onchange="updateDisplay()" required/>
        </li>
        <li>
          <label>Monthly Income</label>
          <input type="number"  id="month-income" name="month-income" value="4000"
                onchange="updateDisplay()" required/>
        </li>
        <li>
          <label>Net Worth</label>
          <input type="number"  id="net-worth" name="net-worth" value="50000"
                onchange="updateDisplay()" required/>
        </li>
        <li>
          <!--<button class="submit" type="submit"
                  onclick="updateDisplay()">CalculateFI</button>-->
          <div id="time-to-fi-output">Your Time to FI is: </div>
        </li>
        <li>
          <div id="time-to-depletion-output">Your Time To Depletion is: </div>
        </li>
      </ul>
      <ul>
        <li class="has_bottom_border">
          <h3>Added Time To FI</h3>
        </li>
        <li>
          <label>Added Monthly Expense</label>
          <input type="number" id="added-monthly-expense"
                name="added-monthly-expense" value="100" onchange="updateDisplay()"/>
        </li>
        <li>
          <label>Added Monthly Income</label>
          <input type="number" id="added-monthly-income"
                name="added-monthly-income" value="0" onchange="updateDisplay()"/>
        </li>
        <li>
          <label>Added Single Expense</label>
          <input type="number" id="added-single-expense"
                name="added-single-expense" value="0" onchange="updateDisplay()"/>
        </li>
        <!--<li>
          <button class="submit" type="submit"
                onclick="updateDisplay()">Calculate Time Added to FI</button>-->
        <li>
          <div id="change-in-time-to-fi-output">Time Added to FI: </div>
        </li>
      </ul>
      </fieldset>
  </form>

  <!--<p>
    <button type="button" onclick="test()">Click Me!</button>
  </p>
  <div id="demo">test</div>-->
</body>
